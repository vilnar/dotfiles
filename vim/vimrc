filetype plugin indent on
syntax on

set ignorecase smartcase incsearch hlsearch
set ruler
set mouse=

set listchars=tab:>\ ,space:.,trail:*,precedes:<,extends:>,eol:$,nbsp:‚ê£

set encoding=utf-8
set fileencoding=utf-8
set scrolloff=5
set nocompatible

" fix security
set modelines=0
set nomodeline

" save mode: file change detection for watching tools (like docker volumes)
set backupcopy=yes

nnoremap <space> <nop>
xnoremap <space> <nop>
let mapleader="\<Space>"

set directory=$TEMP//
set belloff=all

" default plugins
packadd comment
